@{
    ViewBag.Title = "Send reaction.";
    AppServer.Models.Presentation presentation = ViewBag.Presentation;
    AppServer.Models.HubModels.Color Color = ViewBag.Color;
}

<div class="jumbotron">
    <h1>視聴者</h1>

    <button type="button" class="btn btn-primary btn-lg btn-block" id="sendGood">Good!</button>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>使用方法</h2>
        <p>
            このページ上部の「 Good! 」を押します。

            正しく動作している場合、前の画面に ハート が表示されます。
        </p>
    </div>
    <div class="col-md-4">
        <h2>注意事項</h2>
        <p>
            使用しているサーバは、貧弱です。
            超!!!絶!!!連!!!打!!!とかされると、多分落ちます。
            いじめ過ぎないで下さい。
        </p>
    </div>
    <div class="col-md-4">
        <h2>免責事項</h2>
        <p>
            コンテンツのご利用により、万一、ご利用者様に何らかの不都合や損害が発生したとしても、開発者は何らの責任を負うものではありません。
        </p>
    </div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {

            // Reference the auto-generated proxy for the hub.
            var hub = $.connection.reactionsHub;
            //// Create a function that the hub can call back to display messages.
            //goods.client.getGood = function () {

            //    $('#discussion').append('<li><strong>' + (new Date()).toLocaleString() + '</li>');

            //};
            var color = {

                Red : @Color.Red,
                Green : @Color.Green,
                Blue : @Color.Blue

            };

            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendGood').click(function () {

                    // Call the Send method on the hub.
                    hub.server.sendGood('@presentation.Id', color);

                });
            });
        });
    </script>
}