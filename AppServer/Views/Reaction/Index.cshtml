@{
    ViewBag.Title = "Send reaction.";
    AppServer.Models.Presentation presentation = ViewBag.Presentation;
    AppServer.Models.HubModels.Color Color = ViewBag.Color;
}

<div class="jumbotron">
    <h1>視聴者</h1>

    <button type="button" class="btn btn-primary btn-lg btn-block" id="sendGood">Good!</button>
    <button type="button" class="btn btn-primary btn-lg btn-block" id="sendNice">Nice!</button>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {

            // Reference the auto-generated proxy for the hub.
            var hub = $.connection.reactionsHub;
            //// Create a function that the hub can call back to display messages.
            //goods.client.getGood = function () {

            //    $('#discussion').append('<li><strong>' + (new Date()).toLocaleString() + '</li>');

            //};
            var color = {

                Red : @Color.Red,
                Green : @Color.Green,
                Blue : @Color.Blue

            };

            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendGood').click(function () {

                    // Call the Send method on the hub.
                    hub.server.sendGood('@presentation.Id', color);

                });
                $('#sendNice').click(function () {

                    // Call the Send method on the hub.
                    hub.server.sendNice('@presentation.Id', color);

                });
            });
        });
    </script>
}