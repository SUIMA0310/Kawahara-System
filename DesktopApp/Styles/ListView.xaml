<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="UsersListView" TargetType="ListView">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrushKey}"/>
        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrushKey}"/>
    </Style>

    <Style x:Key="UsersListViewItemTextBlock" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="Margin" Value="10"/>
    </Style>

</ResourceDictionary>